@model CategoryModel
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mt-3 ml-3">Update Category</h2>

<div class="col-md-12 mt-3 ml-2">
    <form asp-controller="Category" asp-action="Update" method="post">
        <input type="hidden" name="categoryId" value="@Model.Id" />
        <div class="form-group row">
            <label class="col-md-2 col-form-label">Name</label>
            <div class="col-md-10">
                <input asp-for="Name" value="@Model.Name" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-10 offset-md-2">
                <button type="submit" value="Create" style="width:100px" class="btn btn-primary">Update</button>
                <a asp-action="Index" asp-controller="Category" class="btn btn-warning" value="Cancel" style="width:100px">Cancel</a>
            </div>
        </div>
    </form>

    <br />
    @if (Model.Products.Count > 0)
    {
        <table class="table table-bordered table-striped table-sm">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var x in Model.Products)
                {
                    <tr>
                        <td><a asp-controller="Product" asp-action="Update" asp-route-id="@x.Id">@x.Id</a></td>
                        <td>
                            <img src="~/img/@x.ImageUrl" alt="@x.Name" width="100" />
                        </td>
                        <td><a asp-controller="Product" asp-action="Update" asp-route-id="@x.Id">@x.Name</a></td>
                        <td><a asp-controller="Product" asp-action="Update" asp-route-id="@x.Id">@x.Price</a></td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-warning">
            <h4>NO PRODUCT</h4>
        </div>
    }
</div>


