@model ProductListModel


@if (User.Identity.IsAuthenticated)
{
    <div class="top-brands">
        <div class="container">
            <h2>Top selling offers</h2>
            <div class="grid_3 grid_5">
                <div class="bs-example bs-example-tabs" role="tabpanel" data-example-id="togglable-tabs">
                    <ul id="myTab" class="nav nav-tabs" role="tablist">
                        <li role="presentation" class="active"><a href="#expeditions" id="expeditions-tab" role="tab" data-toggle="tab" aria-controls="expeditions" aria-expanded="true">Products of the month</a></li>
                        <li role="presentation"><a href="#tours" role="tab" id="tours-tab" data-toggle="tab" aria-controls="tours">Today Offers</a></li>
                    </ul>
                    <div id="myTabContent" class="tab-content">
                        <div role="tabpanel" class="tab-pane fade in active" id="expeditions" aria-labelledby="expeditions-tab">
                            <div class="agile-tp">
                                <h5>Products of the month</h5>
                                <p class="w3l-ad">You can find the most favorite products of this month below.</p>
                            </div>
                            <div class="agile_top_brands_grids">
                                @foreach (var x in Model.Products)
                                {
                                    <div class="col-md-4 top_brand_left" style="margin-bottom:25px">
                                        <div class="hover14 column">
                                            @if (x.DiscountedPrice == x.Price)
                                            {
                                                <div class="agile_top_brand_left_grid">
                                                    <form asp-controller="Cart" asp-action="AddToWishlist" method="post" style="display:inline">
                                                        <input type="hidden" name="productId" value="@x.Id" />
                                                        <button type="submit"><i class="fas fa-heart" style="color:red"></i></button>
                                                    </form>
                                                    <div class="agile_top_brand_left_grid1">
                                                        <figure>
                                                            <div class="snipcart-item block">
                                                                <div class="snipcart-thumb">
                                                                    <a href="/HomePage/ProductDetails/@x.Id">
                                                                        <img title=" " style="width:50%" alt="@x.Name" src="~/img/@x.ImageUrl" />
                                                                    </a>
                                                                    <p>@x.Name</p>
                                                                    <h4>@x.Price ₺</h4>
                                                                </div>
                                                                <div class="snipcart-details top_brand_home_details">
                                                                    <a asp-controller="HomePage" asp-action="ProductDetails" asp-route-id="@x.Id" class="btn btn-warning btn-sm">Details</a>

                                                                    <form asp-controller="Cart" asp-action="AddToCart" method="post" style="display:inline">
                                                                        <input type="hidden" name="productId" value="@x.Id" />
                                                                        <input type="hidden" name="quantity" value="1" />
                                                                        <button type="submit" class="btn btn-primary btn-sm ml-3">Add To Cart</button>
                                                                    </form>

                                                                </div>
                                                            </div>
                                                        </figure>
                                                    </div>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="agile_top_brand_left_grid">
                                                    <form asp-controller="Cart" asp-action="AddToWishlist" method="post" style="display:inline">
                                                        <input type="hidden" name="productId" value="@x.Id" />
                                                        <button type="submit"><i class="fas fa-heart" style="color:red"></i></button>
                                                    </form>
                                                    <div class="agile_top_brand_left_grid_pos">
                                                        <img src="~/home/images/offer.png" alt="" class="img-responsive" />
                                                    </div>
                                                    <div class="agile_top_brand_left_grid1">
                                                        <figure>
                                                            <div class="snipcart-item block">
                                                                <div class="snipcart-thumb">
                                                                    <a href="/HomePage/ProductDetails/@x.Id">
                                                                        <img title=" " style="width:50%" alt="@x.Name" src="~/img/@x.ImageUrl" />
                                                                    </a>
                                                                    <p>@x.Name</p>
                                                                    <h4>@x.DiscountedPrice ₺<span>@x.Price ₺</span></h4>
                                                                </div>
                                                                <div class="snipcart-details top_brand_home_details">
                                                                    <a asp-controller="HomePage" asp-action="ProductDetails" asp-route-id="@x.Id" class="btn btn-warning btn-sm">Details</a>

                                                                    <form asp-controller="Cart" asp-action="AddToCart" method="post" style="display:inline">
                                                                        <input type="hidden" name="productId" value="@x.Id" />
                                                                        <input type="hidden" name="quantity" value="1" />
                                                                        <button type="submit" class="btn btn-primary btn-sm ml-3">Add To Cart</button>
                                                                    </form>

                                                                </div>
                                                            </div>
                                                        </figure>
                                                    </div>
                                                </div>
                                            }

                                        </div>
                                    </div>
                                }
                                <div class="clearfix"> </div>
                            </div>
                        </div>
                        @await Component.InvokeAsync("HomeToday")
                    </div>
                </div>
            </div>
        </div>
    </div>
}
