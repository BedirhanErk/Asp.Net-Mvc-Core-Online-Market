@model ProductListModel

    <div class="card">
        <div class="card-header border-0">
            <h3 class="card-title"><i class="fas fa-star" style="margin-right:10px"></i>Product List by Price</h3>
        </div>
        <div class="card-body table-responsive p-0">
            <table class="table table-striped table-valign-middle">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>Price</th>
                        <th>Stock</th>
                        <th>More</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var x in Model.Products)
                    {
                        <tr>
                            <td>
                                <img src="~/img/@x.ImageUrl" alt="Product 1" class="img-circle img-size-32 mr-2">
                                @x.Name
                            </td>
                            <td>@x.Price ₺</td>
                            <td>
                                @x.Stock
                            </td>
                            <td>
                                <a href="/Product/Index" class="text-muted">
                                    <i class="fas fa-arrow-right"></i>
                                </a>
                            </td>
                        </tr>
                    }          
                </tbody>
            </table>
        </div>
    </div>