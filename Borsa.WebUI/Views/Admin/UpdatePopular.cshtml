@model ProductModel
@{
    ViewData["Title"] = "UpdatePopular";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h2 class="mt-3 ml-3">
    Edit Popular Product
</h2>
<hr />
<div class="col-md-12 mt-3 ml-2">
    <form asp-controller="Admin" asp-action="UpdatePopular" method="post">
        <input type="hidden" name="homemonthId" value="@Model.Id" />
        <div class="form-group row">
            <label class="col-md-6 col-form-label">Show @Model.Name on homepage?</label>
            <div class="col-md-2">
                <input asp-for="HomePopular" onchange="this.value=this.checked" type="checkbox" value="true" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-12 ">
                <button type="submit" value="Create" style="width:100px" class="btn btn-primary">Update</button>
                <a asp-action="HomePopular" asp-controller="Admin" class="btn btn-warning" value="Cancel" style="width:100px">Cancel</a>
            </div>
        </div>
    </form>
</div>
