@model CampaignsModel
@{
    ViewData["Title"] = "CreateCampaigns";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-md-9 mt-3 ml-3">
    <h2 class="mb-4">Add new announcement or campaign.</h2>
    <form asp-controller="Admin" asp-action="CreateCampaigns" method="post">
        <div class="form-group row">
            <label class="col-md-2 col-form-label">Description</label>
            <div class="col-md-10">
                <textarea asp-for="Description" value="" class="form-control" ></textarea>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-10 offset-md-2">
                <button type="submit" value="Create" class="btn btn-primary" style="width:100px">Add</button>
                <a asp-action="Campaigns" asp-controller="Admin" class="btn btn-warning" value="Cancel" style="width:100px">Cancel</a>
            </div>
        </div>
    </form>
</div>
