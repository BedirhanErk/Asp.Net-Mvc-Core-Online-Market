@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-12 mb-4 mt-3 ml-1">
    <h2 class="mb-4 ml-1">
        Roles
        <a asp-action="Create" class="btn btn-primary ml-1" style="position:absolute;right:18px;width:120px">Add Role <i style="margin-left:5px" class="fas fa-plus"></i></a>
    </h2>

    <div class="text-danger" asp-validation-summary="ModelOnly"></div>

    @if (TempData["message"] != null)
    {
        <div class="alert alert-success">
            @TempData["message"]
        </div>
    }

    <table id="tbl3" class="table table-striped table-bordered mt-3">
        <thead>
            <tr>
                <th>Delete</th>
                <th>Role Name</th>
                <th>Users</th>
            </tr>
        </thead>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="4" class="text-center">No Role</td>
            </tr>
        }
        else
        {
            <tbody>
                @foreach (var role in Model)
                {
                    <tr>
                        <td>
                            <a asp-controller="AdminRole" asp-action="Delete" asp-route-id="@role.Id" class="text-danger" data-toggle="tooltip" data-placement="top" onclick="return confirm('Are you sure you want to delete it?')"><strong>X</strong></a>
                        </td>
                        <td><a asp-action="Edit" asp-route-id="@role.Id">@role.Name</a></td>
                        <td identity-role="@role.Id"></td>
                    </tr>
                }
            </tbody>
        }
    </table>
</div>

<link href="~/Content/bootstrap.css" rel="stylesheet" />
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<script>
    $('#tbl3').dataTable({});
</script>